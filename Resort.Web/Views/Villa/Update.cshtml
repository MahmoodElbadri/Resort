@model Villa
@{
    ViewData["Title"] = "Update Villa";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Update Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="card-body border p-4">
                <form method="post" asp-controller="Villa" asp-action="Update" class="row">
                    <div class="col-10">
                        <div class="p-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Name" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.Name" class="form-label"></label>
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Description" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.Description" class="form-label"></label>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Price" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.Price" class="form-label"></label>
                                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Sqft" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.Sqft" class="form-label"></label>
                                <span asp-validation-for="@Model.Sqft" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Occupancy" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.Occupancy" class="form-label"></label>
                                <span asp-validation-for="@Model.Occupancy" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.ImageUrl" hidden class="form-control border shadow" />
                                <input asp-for="@Model.Image" class="form-control border shadow" placeholder=" " />
                                <label asp-for="@Model.ImageUrl" class="form-label"></label>
                                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-check-circle"></i> Update
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Villa" asp-action="Index" class="btn btn-danger w-100">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="col-12 text-center">
                            <img src="@Model.ImageUrl"
                                 onerror="this.onerror=null; this.src='/Images/placeholder.jpg';"
                                 style="max-width: 100%; height: auto; border-radius: 5px; border: 1px solid #ccc; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}