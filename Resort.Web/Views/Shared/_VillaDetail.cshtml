    @model Villa

<div class="row">
    <div class="col-12 col-md-5">
        <img class="d-block w-100" style="width: 100%; border-radius:10px;"
             src="@Model.ImageUrl"
             onerror="this.onerror=null; this.src='https://placehold.co/600x400';"
             alt="Villa Image">
    </div>

    <div class="col-12 col-md-7">
        <div class="row p-2">
            <div class="col-12">
                <p class="card-title text-warning" style="font-size:xx-large;">@Model.Name</p>
                <p class="card-text" style="font-size:large;  color: black !important;">
                    @Html.Raw(Model.Description)
                </p>

                @if (Model.VillaAmenity != null && Model.VillaAmenity.Any())
                {
                    <p class="h5" style="color: black;">Villa Amenities</p>
                    <ul style="color: black;">
                        @foreach (var amenity in Model.VillaAmenity)
                        {
                            <li>@amenity.Name</li>
                        }
                    </ul>
                }
            </div>
        </div>
        <div class="row col-12">
            <span class="text-end p-0 pt-3 m-0" style="color: black !important;">
                <span class="float-end" style="color: black !important;">Max Occupancy : @Model.Occupancy adults</span><br />
                <span class="float-end pt-1" style="color: black !important;">Villa Size : @Model.Sqft sqft</span><br />
                <p class="text-warning font-weight-bold pt-1" style="color: black !important;">
                    USD
                    <span style="color: #ff6a00 !important;">
                        @Model.Price.ToString("c") / night
                    </span>
                </p>
            </span>
        </div>


    </div>
</div>